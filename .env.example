
# JWT Secrets (Server-side only - NEVER expose to client)
ACCESS_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_JWT_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# CSRF Protection (Server-side only)
CSRF_SECRET=your-csrf-secret-key-change-this-in-production

# API Configuration (Client-side - will be exposed)
NEXT_PUBLIC_API_HOST=http://localhost:3001
NEXT_PUBLIC_API_URL=/api/v1

# WebSocket Configuration (Client-side - will be exposed)
NEXT_PUBLIC_WS_SERVER_PATH=http://localhost:3002
NEXT_PUBLIC_WS_SERVER_URI=/betjockey/bingo/socket.io

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
COOKIE_DOMAIN=localhost
SECURE_COOKIES=false

# Production Environment Variables
NODE_ENV=development
PORT=3000
HOSTNAME=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Audit and Monitoring
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90
SENTRY_DSN=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_REPORTS=true
ENABLE_USER_MANAGEMENT=true
ENABLE_ROOM_MANAGEMENT=true
ENABLE_DEBUG_MODE=false